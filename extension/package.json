{
  "name": "genai-studio-preview",
  "displayName": "GenAI Studio Preview",
  "description": "Preview AI Studio prototypes locally with zero modifications. Mocks GenAI SDK, supports local LLMs, and enables mobile testing via QR codes.",
  "version": "1.0.0",
  "publisher": "carlosfundora",
  "license": "Polyform-Noncommercial-1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/carlosfundora/genai-studio-preview"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Debuggers",
    "Testing"
  ],
  "keywords": [
    "ai-studio",
    "gemini",
    "google",
    "genai",
    "preview",
    "mock",
    "vite",
    "react"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "genai-preview.launchProject",
        "title": "Launch Preview",
        "icon": "$(play)"
      },
      {
        "command": "genai-preview.stopProject",
        "title": "Stop Preview",
        "icon": "$(debug-stop)"
      },
      {
        "command": "genai-preview.addProject",
        "title": "Add Project",
        "icon": "$(add)"
      },
      {
        "command": "genai-preview.removeProject",
        "title": "Remove Project",
        "icon": "$(trash)"
      },
      {
        "command": "genai-preview.refreshProjects",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "genai-preview.openInBrowser",
        "title": "Open in Browser",
        "icon": "$(globe)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "genai-preview",
          "title": "GenAI Studio",
          "icon": "$(beaker)"
        }
      ]
    },
    "views": {
      "genai-preview": [
        {
          "id": "genai-projects",
          "name": "Projects",
          "type": "tree"
        },
        {
          "id": "genai-config",
          "name": "Configuration",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "genai-preview.addProject",
          "when": "view == genai-projects",
          "group": "navigation@1"
        },
        {
          "command": "genai-preview.refreshProjects",
          "when": "view == genai-projects",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "genai-preview.launchProject",
          "when": "view == genai-projects && viewItem == project-stopped",
          "group": "inline@1"
        },
        {
          "command": "genai-preview.stopProject",
          "when": "view == genai-projects && viewItem == project-running",
          "group": "inline@1"
        },
        {
          "command": "genai-preview.openInBrowser",
          "when": "view == genai-projects && viewItem == project-running",
          "group": "inline@2"
        },
        {
          "command": "genai-preview.removeProject",
          "when": "view == genai-projects",
          "group": "context"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./tsconfig.extension.json",
    "watch": "tsc -watch -p ./tsconfig.extension.json",
    "package": "vsce package",
    "publish:openvsx": "ovsx publish"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.22.0",
    "ovsx": "^0.8.3",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "vite": "^6.2.0",
    "qrcode-terminal": "^0.12.0",
    "chalk": "^5.3.0",
    "glob": "^10.0.0",
    "portfinder": "^1.0.32"
  }
}
